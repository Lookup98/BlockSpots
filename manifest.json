{
  "manifest_version": 3,
  "name": "Blockly Highlighter",
  "version": "1.1",
  "description": "Highlights & navigates blocks in Kodular/MIT App Inventor by keyword",
  "permissions": ["scripting","activeTab"],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
